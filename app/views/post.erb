<h1><a href="<%=@post.url%>"><%=@post.title%></a></h1>

<%unless @all_comments.nil?%>
  <%@all_comments.each do |comment|%>
  <p>From <%=comment.user.name%> at <%=comment.created_at.strftime("%Y-%m-%d")%></p>
  <p><%=comment.text%></p><button><a href = "/post/<%=@post.id%>/comment/new?reply_id=<%=comment.id%>">reply</a></button>
  <%end%>
<%end%>

<h2>Comments:</h2>
<form action="/post/<%=@post.id%>/comment/new" method="POST">
<input type="text" name="name" placeholder="Your username"><br>
<textarea name="text" rows="2" cols="60" placeholder="Join the dicussion about this post!"></textarea>
<input type="submit" value="Gimme Internet Points!">
</form>