<form action="/login" method="POST">
	<% if params[:error] %>
	<p>Error: <%= params[:error] %></p>
	<%end%>
	<input type="text" name="login[name]" placeholder="your username">
	<input type="password" name="login[password]" placeholder="your password">
	<input type="submit" value="Get me in!">
</form>